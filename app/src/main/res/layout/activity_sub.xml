<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="softwaredongjune.schoolproject160613.SubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:gravity="center"
            android:text="3학년 2반 시간"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ourTime"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20"
            android:gravity="center"
            android:text="8 : 09"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="20"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:gravity="center"
            android:text="실제 시간"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/realTime"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:gravity="center"
            android:text="7 : 59"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

    </LinearLayout>

</FrameLayout>
